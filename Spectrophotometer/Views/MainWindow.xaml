<Window x:Class="Spectrophotometer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spectrophotometer"
        mc:Ignorable="d"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Menu Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2">
            <MenuItem Header="О программе" FontSize="14">
                <MenuItem Header="GitHub">
                    <TextBox IsReadOnly="True" Padding="3">https://github.com/IvanDt03/KarginScales</TextBox>
                </MenuItem>
                <MenuItem Header="Телеграм">
                    <TextBox IsReadOnly="True" Padding="3">@ivandt03</TextBox>
                </MenuItem>
            </MenuItem>
        </Menu>

        <StackPanel Grid.Column="1" Grid.Row="1">
            <TextBlock>Спектрофотометр</TextBlock>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Выбор смеси мономеров:</TextBlock>
                <ComboBox></ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Выбор концентрации смеси:</TextBlock>
                <ComboBox></ComboBox>
            </StackPanel>
        </StackPanel>

        <TabControl Grid.Row="1" Grid.Column="0">
            <TabItem Header="График"></TabItem>
            <TabItem Header="Градуировочный график"></TabItem>
        </TabControl>
    </Grid>
</Window>
