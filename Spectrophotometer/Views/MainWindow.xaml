<Window x:Class="Spectrophotometer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spectrophotometer"
        xmlns:vm="clr-namespace:Spectrophotometer.ViewModels"
        xmlns:model="clr-namespace:Spectrophotometer.Models"
        xmlns:view="clr-namespace:Spectrophotometer.Views"
        mc:Ignorable="d"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        Title="MainWindow" Height="500" Width="800" Icon="/Content/Icon2.ico">

    <Window.DataContext>
        <vm:MainViewModel></vm:MainViewModel>
    </Window.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Menu Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2">
            <MenuItem Header="О программе" FontSize="14">
                <MenuItem Header="GitHub">
                    <TextBox IsReadOnly="True" Padding="3">https://github.com/IvanDt03/KarginScales</TextBox>
                </MenuItem>
                <MenuItem Header="Телеграм">
                    <TextBox IsReadOnly="True" Padding="3">@ivandt03</TextBox>
                </MenuItem>
            </MenuItem>
        </Menu>

        <StackPanel Grid.Column="1" Grid.Row="1">
            <TextBlock>Спектрофотометр</TextBlock>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Выбор смеси мономеров:</TextBlock>
                <ComboBox x:Name="cmbMixtures" ItemsSource="{Binding Mixtures}"
                          SelectedItem="{Binding SelectedMixture}"
                          DisplayMemberPath="Title"></ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Выбор концентрации смеси:</TextBlock>
                <ComboBox x:Name="cmbRatio" ItemsSource="{Binding SelectedMixture.ListRatio}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate DataType="{x:Type model:RatioMonomers}">
                            <TextBlock>
                                <Run Text="{Binding Mixture.NameFirstMonomer}"/>
                                <Run Text="{Binding VolumeFirstMonomer, StringFormat={}{0:F2}}" Foreground="Red" FontWeight="Bold" FontStyle="Italic"/>
                                <Run Text="мл;"/>
                                <Run Text="{Binding Mixture.NameSecondMonomer}"/>
                                <Run Text="{Binding VolumeSecondMonomer, StringFormat={}{0:F2}}" Foreground="Red" FontWeight="Bold" FontStyle="Italic"/>
                                <Run Text="мл;"/>
                            </TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Button Content="Загрузить в устройство" Command="{Binding LoadedCommand}"
                                   CommandParameter="{Binding ElementName=cmbRatio, Path=SelectedItem}"></Button>
            </StackPanel>
            <view:Device></view:Device>
            <Button Command="{Binding PrintCommand}">Версия для печати</Button>
        </StackPanel>
        <TabControl Grid.Row="1" Grid.Column="0">
            <TabItem Header="Спектр">
                <lvc:CartesianChart Series="{Binding ChartLive.Series}"
                                    XAxes="{Binding ChartLive.XAxis}"
                                    YAxes="{Binding ChartLive.YAxis}"></lvc:CartesianChart>
            </TabItem>
            <TabItem Header="Обработка результатов">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="0.4*"></RowDefinition>
                        <RowDefinition Height="0.4*"></RowDefinition>
                        <RowDefinition Height="0.4*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.ColumnSpan="2" Text="Градуировочный график"/>
                    <lvc:CartesianChart Grid.Row="1" Grid.ColumnSpan="2"
                                        Series="{Binding ChartCalibration.Series}"
                                        XAxes="{Binding ChartCalibration.XAxis}"
                                        YAxes="{Binding ChartCalibration.YAxis}"/>
                    <TextBlock Grid.Row="2" Grid.ColumnSpan="2" Text="Обработка результатов"/>
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Введите значение А на максимуме кривой:"/>
                    <TextBox Grid.Row="3" Grid.Column="1"/>
                    <Button Grid.Row="4" Grid.ColumnSpan="2" Content="Рассчитать"/>
                    <Label Grid.Row="5" Grid.Column="0" BorderBrush="{x:Null}">
                        <TextBlock>
                            <Run Text="Мольная доля для мономера"/>
                            <Run Text="{Binding SelectedMixture.NameFirstMonomer, StringFormat='&quot;{0}&quot;'}"/>
                        </TextBlock>
                    </Label>
                    <TextBox Grid.Row="5" Grid.Column="1"></TextBox>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
